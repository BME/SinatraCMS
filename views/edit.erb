    <input type="hidden" name="page[slug]" value="<%= @page.slug %>" id="slug"/>
<textarea name="page[content]" cols="100" rows="25" > 
    <%= @page.content rescue "" %>
</textarea>
<input type="submit" name="submit" value="Update Page" id=""/>
</form>
